# 启动vpn
pon(){
	sudo pon vpn_shenma_usabak
	sudo route add -net 0.0.0.0 dev ppp0
}
#关闭vpn
poff(){
	 sudo /etc/init.d/network restart
     sudo poff vpn_shenma_usabak
}
#设置n2n边缘结点
start_edge(){
  sudo edge -a 10.10.0.1 -c mynetwork -k mynetwork -l 119.57.58.71:5000
  echo "已设置edge:ip 10.10.0.1"
}
#停止边缘结点 
stop_edge(){
  sudo killall edge
}